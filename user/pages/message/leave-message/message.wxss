/* user/pages/message/leave-message/message.wxss */
.leave_message{
  padding: 0 30rpx;
  box-sizing: border-box;
  height: calc(100vh - 180rpx);
  background-color: rgb(233, 233, 233);
}
.message{
  display: flex;
  flex-flow: column;
}


.bottom{
  display: flex;
  align-items: center;
  margin-top: 24rpx;
  font-size: 0
}
.bottom>view{
  width: 40rpx;
  height: 2rpx;
  background: #C4C4C4;
}
.bottom>text{
  font-size: 24rpx;
  font-weight: 500;
  color: #666666;
  margin: 0rpx 8rpx 0rpx 16rpx;
}
.bottom>image{
  width: 24rpx;
  height: 24rpx;
}


.bottom_input{
  width: 100%;
  height: 112rpx;
  background: #FFFFFF;
  box-shadow: 0px -1rpx 0px 1rpx rgba(0, 0, 0, 0.1);
  opacity: 1;
  position: fixed;
  z-index: 10;
  bottom: 68rpx;
  left: 0px;
  right: 0px;
  padding: 16rpx 60rpx;
  box-sizing: border-box;
}
.bottom_input>view{
  width: 630rpx;
  height: 80rpx;
  background: #EEEEEE;
  border-radius: 42rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0rpx 40rpx;
  box-sizing: border-box;
}
.input_box>input{
  height: 100%;
  flex: 1;
  margin-right: 50rpx;
}
.place_{
  font-size: 28rpx;
  font-weight: 400;
  color: #999999
}
.push_{
  width: 96rpx;
  height: 44rpx;
  font-size: 28rpx;
  font-weight: 500;
  color: #524FD1;
  border-left: 1px solid #DDDDDD;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}
.input_box>input{
  font-size: 32rpx;
}


.leave_message_box{
  display: flex;
  flex-flow: column;
  width: 100%;
  margin-top: 24rpx;
}
.leave_message_box > view {
  margin-bottom: 30rpx;
}
.left_message{
  width: 100%;
}
.aaa{
  width: 100%;
  display: flex;
  justify-content: flex-end;
}
.aaa .message_t{
  word-wrap: break-word;
  word-break: break-all;
  font-size: 32rpx;
  background-color: #fff;
  border-radius: 20rpx;
  padding: 20rpx;
  box-sizing: border-box;
}
.aaa .message_a{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-left: 20rpx;
}

.right_message{
  width: 100%;
}
.bbb{
  width: 100%;
  display: flex;
}
.bbb .message_t{
  word-wrap: break-word;
  word-break: break-all;
  font-size: 32rpx;
  background-color: #fff;
  border-radius: 20rpx;
  padding: 20rpx;
  box-sizing: border-box;
}
.bbb .message_a{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}
scroll-view ::-webkit-scrollbar {
  width: 0;
  height: 0;
  display: none;
}