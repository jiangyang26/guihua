/* pages/fast/fast.wxss */
.fast_scroll{
  height: calc(100vh - 112rpx);
  box-sizing: border-box;
  overflow-x: hidden;
  overflow-y: auto;
  border-radius: 16rpx;
  padding-bottom: 112rpx;
  box-sizing: border-box;
}
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
  display: none;
}
.body_detail{
  margin: auto 30rpx;
}
.fast{
  background: #5350D5;
  width: 100%;
  height: calc(100vh - 112rpx);
  padding: 0rpx 30rpx;
  box-sizing: border-box;
}
.fast_body{
  height: 1360rpx;
  background: #FFFFFF;
  border-radius: 16rpx;
}
.head_bgd{
  position: relative;
}
.head_bgd img{
  width: 100%;
  height: 100%;
}
.fast_mark{
  position: absolute;
  top: 34rpx;
  left: 198rpx;
  font-size: 48rpx;
  font-weight: 700;
  color: #000000;
}
.publish{
  width: 240rpx;
  height: 96rpx;
  background: #5350D5;
  border-radius: 88rpx;
  margin: 46rpx auto 0rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 36rpx;
  font-weight: 500;
  color: #FFFFFF;
}

.aaaa{
  width: 100%;
  overflow-x: scroll;
}
.aaaa::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
.give{
  display: flex;
  align-items: center;
}
.give>picker{
  flex: 1;
  padding: 10rpx 0px;
  box-sizing: border-box;
}
.give_box{
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.give_box image{
  width: 24rpx;
  height: 24rpx;
}
.give_box>view:first-child{
  font-size: 28rpx;
  font-weight: 600;
  color: #000000;
  margin-left: 10rpx;
}
.give_box>view:last-child{
  /* border: 1px dashed; */
  width: 24rpx; height: 24rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.title_{
  width: 160rpx;
  height: 110rpx;
  font-size: 28rpx;
  font-weight: 600;
  color: #000000;
  display: flex;
  align-items: center;
}
.menu{
  box-shadow: none;
  background-color: #FFF;
  height: 40rpx;
  display: flex;
  align-items: center;
  box-shadow: none;
  font-size: 24rpx;
  color: #666;
}
.recruit{
  display: flex;
  justify-content: space-between;
  width: 1290rpx;
}
.recruit_box{
  width: 144rpx;
  height: 172rpx;

  background: #F5F7FF;
  border-radius: 4px 4px 4px 4px;
  border: 1px solid #ffffff;

  font-size: 24rpx;
  font-weight: 400;
  color: #333333;
  line-height: 28rpx;

  display: flex;
  flex-flow: column;
  justify-content: space-between;
  align-items: center;
  text-align: center;
}
.recruit_box>view{
  z-index: 1;
}
.recruit_box image{
  width: 32rpx; height: 32rpx;
}
.recruit_box>view:first-child{
  margin: 20rpx 10rpx 0px 10rpx;
}
.recruit_box>view:last-child{
  margin-bottom: 10rpx;
}
.active{
  background: linear-gradient(180deg, #F5F8FF 0%, #E6E5FF 100%);
  border-radius: 4px 4px 4px 4px;
  border: 1px solid #5350D5;
}
.checked_category{
  margin-bottom: -16rpx;
  margin-top: 20rpx;
  font-size: 32rpx;
}
.item_message{
  height: 100rpx;
  display: flex;
  align-items: center;
}
.item_message view{
  width: 160rpx;
  display: flex;
}
.item_message text{
  font-size: 28rpx;
  font-weight: 600;
  color: #000000;
}
.item_message>input{
  height: 70rpx;
  flex: 1;
  font-size: 28rpx;
  font-weight: 400;
  color: #000000;
}

.reward{
  display: flex;
  align-items: center;
  height: 120rpx;
}
.reward_box{
  display: flex;
  flex: 1;
  align-items: center;
  margin-left: 10rpx;
}
.item_box{
  height: 60rpx;
  background-color: #F1F1FF;
  border-radius: 4px 4px 4px 4px;
  display: flex;
  align-items: center;

  font-size: 26rpx;
  font-weight: 400;
  color: #666666;
}
.item_box text{
  margin: 0px 20rpx;
}
.active{
  background-color: #5350D5;
  color: #FFFFFF;
  /* color: #686868; */
}
.input{
  width: 160rpx;
}
.mark_{
  background-color: #5350D5;
  color: white;
}
.kc{
  display: flex;
}
.title_box_{
  width: 160rpx;
  display: flex;
  align-items: center;
}
.title_box_>text{
  font-size: 28rpx;
  font-weight: bold;
}
.other{
  display: flex;
  margin-top: 34rpx;
  flex-flow: row;
}
.other>view:first-child{
  width: 160rpx;
  display: flex;
}
.other>view:first-child>text{
  font-size: 28rpx;
  font-weight: 600;
  color: #000000;
}
.other_box{
  height: 192rpx;
  background: #FFFFFF;
  border-radius: 4px 4px 4px 4px;
  border: 1px solid #DDDDDD;
  display: flex;
  flex: 1;
  align-items: center;
}
.other_box>textarea{
  margin: 0px 20rpx;
  width: 100%;
  height: 85%;
  box-sizing: border-box;
  font-size: 26rpx;
}
.place{
  font-size: 26rpx;
  font-weight: 400;
  color: #999999;
}
.focus_box{
  position: fixed;
  left: 0rpx;
  right: 0rpx;
  bottom: 100rpx;
  z-index: 101;
  width: 100%;
  height: 80rpx;
  padding: 0rpx 30rpx;
  box-sizing: border-box;
  background-color: #fff;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-top: 1px solid #cccccc;
}
.focus_box>input{
  height: 100%;
  width: calc(100% - 180rpx);
}
.focus_box>view{
  display: flex;
  align-items: center;
}

.dw_text{
  color: #333333;
  font-size: 24rpx;
  margin-right: 36rpx;
  margin-left: 4rpx;
}
.input_box_kc input{
  height: 100%;
  padding: 0 20rpx;
  box-sizing: border-box;
}