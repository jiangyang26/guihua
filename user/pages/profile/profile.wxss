/* pages/profile/profile.wxss */
page {
  height: 100%;
  background-color: #FAFCFF;
}
.head_pic{
  width: 100%;
  position: relative;
}
.bg_pic{
  width: 100%;
}
.head_box{
  display: flex;
  flex-flow: column;
  width: 420rpx;
  align-items: center;
  position: absolute;
  top: calc(100% - 80rpx);
  left: calc(50% - 210rpx);
}
.head_box>view{
  display: flex;
  align-items: center;
  flex-flow: column;
  align-items: center;
  justify-content: center;
  margin-top: 24rpx;
}
.head_box>view>text:first-child{
  font-size: 36rpx;
  font-weight: 500;
  color: #3C2B1C;
  margin-bottom: 4rpx;
}
.head_box>view>text:last-child{
  font-size: 26rpx;
  font-weight: 400;
  color: #999999;
}
.default_pic{
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
}
.nav{
  margin-top: 150rpx;
}
.head_text{
  position: absolute;
  width: 192rpx;
  height: 72rpx;
  background: #FFFFFF;
  border-radius: 27px 27px 27px 27px;
  top: 180rpx;
  right: 74rpx;
  font-size: 32rpx;
  font-weight: 500;
  color: #271BA1;
  display: flex;
  align-items: center;
  justify-content: center;
}
.userinfo_box{
  width: 100%;
}