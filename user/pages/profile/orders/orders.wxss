/* pages/profile/orders/orders.wxss */
.orders{
  height: 100vh;
  background: #FAFCFF;
  padding: 40rpx 30rpx 112rpx 30rpx;
  box-sizing: border-box;
  overflow-y: scroll;
}
.title_view{
  height: 36rpx;
  font-size: 26rpx;
  font-weight: 600;
  color: #333333;
  line-height: 30rpx;
  margin-bottom: 30rpx;
}
.agreement_list{
  display: flex;
  justify-content: space-between;
}
.order_agreement{
  font-size: 26rpx;
  font-weight: 500;
  color: #333333;
  line-height: 30rpx;

  margin-top: 40rpx;
  margin-bottom: 24rpx;
}

.order{
  width: 690rpx;
  background: #FFFFFF;
  box-shadow: 0px 0px 24rpx 1px rgba(0, 0, 0, 0.1);
  border-radius: 8rpx;
  opacity: 1;
  display: flex;
  flex-flow: column;
  padding-bottom: 32rpx;
  margin-bottom: 32rpx;
  box-sizing: border-box;
}
.order_head{
  background: #F1F1FF;
  padding: 0rpx 24rpx;
  box-sizing: border-box;
}
.order_head image{
  width: 32rpx;
  height: 32rpx;
  margin-right: 16rpx;
}
.order_head>view{
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 72rpx;
}
.order_head>view>text{
  font-size: 30rpx;
  font-weight: bold;
  color: #000000;
  line-height: 36rpx;
}
.head_right_box{
  display: flex;
  align-items: center;
  font-size: 28rpx;
  font-weight: 500;
  color: #333333;
  line-height: 32rpx;
}
.order_body{
  padding: 0rpx 24rpx;
  box-sizing: border-box;
} 
.right_pic{
  width: 24rpx;
  height: 24rpx;
  margin-left: 4rpx;
}
.order_num_{
  display: flex;
  justify-content: space-between;
  margin: 32rpx 0rpx 16rpx 0rpx;
}
.order_num_>text{
  font-size: 28rpx;
  font-weight: 500;
  color: #333333;
  line-height: 32rpx;
}
.order_num_>view{
  display: flex;
  align-items: center;
  font-size: 0;
}
.order_num_>view>text{
  font-size: 24rpx;
  font-weight: 400;
  color: #000000;
  line-height: 28rpx;
}
._date{
  font-size: 28rpx;
  font-weight: 500;
  color: #333333;
  line-height: 32rpx;
}
.reason{
  font-size: 14px;
  font-weight: 400;
  color: #DA1D1D;
  line-height: 16px;
  margin-top: 16rpx;

  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
}