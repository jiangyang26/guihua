/* pages/profile/scheme/scheme.wxss */
.scheme{
  padding: 46rpx 30rpx 0rpx;
  height: 100vh;
  overflow-y: scroll;
  background: #FAFCFF;
}

.scheme_list{
  height: 240rpx;
  background: #FFFFFF;
  box-shadow: 0px 8rpx 24rpx 2rpx rgba(0, 0, 0, 0.05);
  border-radius: 16rpx;
  padding: 0rpx 40rpx;
  box-sizing: border-box;
  margin-bottom: 32rpx;
}
.s_top{
  font-size: 32rpx;
  font-weight: bold;
  color: #000000;
  line-height: 38rpx;
  padding-top: 28rpx;
  box-sizing: border-box;
}
.s_center{
  font-size: 28rpx;
  font-weight: 400;
  color: #333333;
  line-height: 32rpx;
  margin-top: 16rpx;
}
.s_bottom{
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 26rpx;
}
.s_bottom>text{
  font-size: 36rpx;
  font-weight: bold;
  color: #2BB2FF;
  line-height: 42rpx;
}
.s_bottom>view{
  width: 176rpx;
  height: 64rpx;
  border-radius: 40rpx;
  border: 1px solid #5350D5;

  font-size: 26rpx;
  font-weight: 400;
  color: #5350D5;
  line-height: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}