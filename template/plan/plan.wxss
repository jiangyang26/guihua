/* user/pages/plan/classification-1/match-plan/match-plan.wxss */
.study_plan{
  padding: 0rpx 30rpx 112rpx;
  box-sizing: border-box;
  background: #FAFCFF;
  height: 100vh;
  overflow-y: scroll;
}
.study_target{
  height: 144rpx;
  background: #FFFFFF;
  box-shadow: 0rpx 8rpx 24rpx 2rpx rgba(0, 0, 0, 0.05);
  border-radius: 16rpx;
  margin-top: 12rpx;
}
.target_top_{
  display: flex;
  align-items: center;
  padding-top: 22rpx;
  box-sizing: border-box;
}
.target_top_>view{
  width: 32rpx;
  height: 32rpx;
  background: #5350D5;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  
  font-size: 20rpx;
  font-weight: 500;
  color: #FFFFFF;
}
.target_top_>text{
  font-size: 36rpx;
  font-weight: 500;
  color: #000000;
  margin-left: 16rpx;
}
.target_bottom_{
  font-size: 24rpx;
  font-weight: 400;
  color: #666666;
  margin-top: 16rpx;
}
.study_target, .study_body{
  padding: 0rpx 30rpx;
}
.study_body{
  /* height: 712rpx; */
  background: #FFFFFF;
  box-shadow: 0rpx 8rpx 24rpx 2rpx rgba(0, 0, 0, 0.05);
  border-radius: 16rpx;
  margin-top: 24rpx;
  padding: 40rpx 30rpx;
  box-sizing: border-box;
}
.lines{
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.mark_lines{
  margin-top: 40rpx;
}
.place_{
  font-size: 28rpx;
  font-weight: 400;
  color: #999999;
  width:100%;overflow: hidden;text-overflow: ellipsis;white-space: nowrap;
}
.lines image{
  width: 24rpx;
  height: 24rpx;
}
.study_body>title{
  font-size: 28rpx;
  font-weight: 400;
  color: #000000;
}
.input_name{
  height: 88rpx;
  background: #F5F5F5;
  border-radius: 8rpx;
  padding-left: 24rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  margin: 16rpx 0rpx 0rpx 0rpx;
}
.input_name>input{
  flex: 1;
  font-size: 30rpx;
}
.name_place_{
  font-size: 26rpx;
  font-weight: 400;
  color: #999999;
}
.study_current{
  background: #FFFFFF;
  box-shadow: 0rpx 8rpx 24rpx 2rpx rgba(0, 0, 0, 0.05);
  border-radius: 16rpx;
  margin-top: 40rpx;
  padding: 0rpx 30rpx 32rpx;
  box-sizing: border-box;
  display: flex;
  flex-flow: column;
}
.submit{
  margin: 48rpx auto;
  width: 240rpx;
  height: 96rpx;
  background: #5350D5;
  border-radius: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  font-weight: 500;
  color: #FFFFFF;
}
.study_current>textarea{
  width: 100%;
  height: 300rpx;
  font-size: 28rpx;
  margin-top: 20rpx;
  border-radius: 8rpx;
  padding: 30rpx;
  box-sizing: border-box;
  background-color: #F5F5F5;
}
.focus_box{
  position: fixed;
  left: 0rpx;
  right: 0rpx;
  bottom: 100rpx;
  z-index: 10;
  width: 100%;
  height: 80rpx;
  padding: 0rpx 30rpx;
  box-sizing: border-box;
  background-color: #fff;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-top: 1px solid #cccccc;
}
.focus_box>input{
  height: 100%;
  width: calc(100% - 180rpx);
}
.focus_box>view{
  display: flex;
  align-items: center;
}
.study_current>picker:last-child{
  margin-bottom: 32rpx;
}
.popup_top_title{
  display: flex;
  justify-content: space-between;
}
.cancel_{
  color: #797979;
  font-size: 32rpx;
  margin-bottom: 20rpx;
}
.confirm_{
  color: #6BBA9A;
  font-size: 32rpx;
}
.checkbox_{
  display: block;
  margin-bottom: 20rpx;
}