.banner {
  margin: 0 auto;
  width: 690rpx;
  height: 320rpx;
}
.banner > image {
  width: 100%;
  height: 100%;
}
page {
  background: #FAFCFF;
  padding: 0 30rpx 112rpx;
  box-sizing: border-box;
}
.title {
  margin: 32rpx 0 24rpx;
  font-size: 30rpx;
  font-weight: bold;
}
.grow_box {
  padding: 30rpx 0 30rpx 30rpx;
  display: flex;
  flex-wrap: wrap;
  box-shadow: 0 0 20rpx 2rpx rgba(0, 0, 0, 0.1);
  border-radius: 16rpx;
}
.grow_box .grow {
  padding: 0 16rpx;
  text-align: center;
  box-sizing: border-box;
  margin-bottom: 30rpx;
  width: 190rpx;
  height: 118rpx;
  margin-right: 30rpx;
  font-size: 26rpx;
  border-radius: 8rpx;
}
.grow_box .ec {
  background-color: #ECF2FB;
}
.grow_box .ee {
  background-color: #EEEEEE;
}
.grow_box textarea {
  padding: 20rpx 30rpx;
  box-sizing: border-box;
  width: 630rpx;
  height: 184rpx;
  background-color: #F5F5F5;
  border-radius: 8rpx;
  border: 1px solid #EEEEEE;
  font-size: 26rpx;
}
.box {
  padding: 30rpx;
  box-sizing: border-box;
  width: 100%;
  height: 128rpx;
  box-shadow: 0 8rpx 24rpx 2rpx rgba(0, 0, 0, 0.05);
  border-radius: 16rpx;
  display: flex;
}
.box input {
  box-sizing: border-box;
  width: 100%;
  height: 100%;
  font-size: 26rpx;
}
.radio {
  display: flex;
  align-items: center;
  margin-right: 64rpx !important;
  font-size: 26rpx;
}
button {
  margin: 48rpx auto 56rpx;
  width: 240rpx;
  height: 96rpx;
  background-color: #5350D5;
  color: #fff;
  font-size: 36rpx;
  border-radius: 88rpx;
}
