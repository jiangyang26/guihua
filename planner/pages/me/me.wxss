.banner {
  margin: 0 auto;
  width: 690rpx;
  height: 320rpx;
}
.banner > image {
  width: 100%;
  height: 100%;
}
page {
  height: 100%;
  background-color: #FAFCFF;
  overflow-y: scroll;
  padding: 0 30rpx;
  box-sizing: border-box;
}
.userInfo_box {
  margin: 38rpx 0 0 0;
  display: flex;
  height: 144rpx;
}
.userInfo_box .userInfo_img {
  width: 144rpx;
  height: 144rpx;
  border-radius: 50%;
}
.userInfo_box .userInfo {
  margin: 0 0 0 24rpx;
  padding: 20rpx 0;
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.userInfo_box .userInfo .userInfo_name {
  font-size: 36rpx;
  font-weight: 500;
  color: #3C2B1C;
}
.userInfo_box .userInfo .userInfo_title {
  font-weight: 500;
  font-size: 26rpx;
  color: #999999;
}
.userInfo_box .userInfo_vip {
  padding: 20rpx 0;
  display: flex;
}
.userInfo_box .userInfo_vip .icon_box {
  height: 54rpx;
  border: 1px solid #fff;
}
.userInfo_box .userInfo_vip .mark_box {
  height: 108rpx;
  display: flex;
  flex-flow: column;
  justify-content: space-between;
}
.userInfo_box .userInfo_vip .mark_box .mark_b {
  border-radius: 16rpx;
  height: 54rpx;
  padding: 0rpx 10rpx;
  background-color: #EFEFFF;
  color: #5350D5;
  font-size: 22rpx;
  font-weight: 400;
}
.userInfo_box .userInfo_vip .mark_box .vip_time {
  height: 44%;
  color: #fff;
  font-size: 20rpx;
  
  border-radius: 16rpx;
  background-color: #CCCCCC;
}
.userInfo_box .userInfo_vip .icon {
  width: 48rpx;
  height: 48rpx;
}
.userInfo_box .userInfo_vip .vip_box {
  margin-left: 20rpx;
  width: 176rpx;
  height: 108rpx;
  border-radius: 16rpx;
  border: 1px solid #E2E1FF;
}
.userInfo_box .userInfo_vip .vip_box .vip {
  height: 54rpx;
  background-color: #EFEFFF;
  border-radius: 16rpx 16rpx 0 0;
  color: #5350D5;
  font-size: 24rpx;
  font-weight: 400;
}
.userInfo_box .userInfo_vip .vip_box .vip_time {
  height: 50%;
  color: #999999;
  font-size: 20rpx;
}
.medal_box {
  margin-top: 48rpx;
  display: flex;
  box-shadow: 0 0 16rpx 2rpx rgba(0, 0, 0, 0.1);
  border-radius: 16rpx 16rpx 16rpx 16rpx;
  padding: 12rpx 12rpx;
  box-sizing: border-box;
  align-items: center;
  justify-content: space-between;
}
.grod_box{
  display: flex;
  flex: 1;
  margin-right: 30rpx;
}
.medal_box .grod {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #666666;
  font-size: 20rpx;
}
.medal_box .grod image {
  width: 56rpx;
  height: 56rpx;
}
.medal_box .text {
  width: 80rpx;
  font-size: 26rpx;
  color: #999999;
  letter-spacing: 2rpx;
  display: flex;
  flex-flow: column;
}
.medal_box .text text {
  border-left: 1px solid;
  padding-left: 14rpx;
  box-sizing: border-box;
}
.mark_grod{
  margin-left: 48rpx;
}
.mark_grod:first-child{
  margin-left: 10rpx;
}
.title_box {
  margin-top: 18rpx;
}
.function_box {
  margin-top: 20rpx;
  display: flex;
  flex-wrap: wrap;
}
.function_box .contact_box {
  position: relative;
}
.function_box .grod {
  width: 25%;
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #333333;
  font-size: 26rpx;
  font-weight: bold;
  margin-bottom: 48rpx;
}
.function_box .grod image {
  margin-bottom: 30rpx;
  width: 152rpx;
  height: 136rpx;
  box-shadow: 0rpx 6rpx 12rpx 4rpx rgba(0, 0, 0, 0.1);
  border-radius: 24rpx;
}
.function_box .grod .contact_button {
  position: absolute;
  top: 0rpx;
  left: 0rpx;
  width: 172rpx;
  height: 204rpx;
  background-color: rgba(0, 0, 0, 0);
}
.contact_button::after {
  border: none;
 }

.mark_vip{
  position: relative;
}
.mark_s{
  position: absolute;
  right: 30rpx;
  top: 110rpx;
  border-left: 26rpx solid transparent; 
  border-right: 26rpx solid transparent; 
  border-bottom: 30rpx solid #EFEFFF;
}
.vip_toast{
  position: absolute;
  top: 130rpx;
  right: 0;
  width: 150px;
  height: 60rpx;
  background-color: #EFEFFF;
  border-radius: 14rpx;
  display: flex;
  align-items: center;
  overflow: hidden;
}
.text_{
  font-size: 30rpx;
  white-space: nowrap;
  position: relative;
  padding: 0rpx 10rpx;
  box-sizing: border-box;
  color: #5552D6;
}
.vip_box_contact{
  position: relative;
}
.contact_vip_button{
  position: absolute;
  top: 0px;
  left: 0px;
  height: 54rpx;
  width: 100%;
  background-color: rgba(0, 0, 0, 0);
}

.pt_medal{
  position: relative;
}
.toast_gz{
  position: absolute;
  width: 100%;
  height: 58rpx;
  bottom: calc(100% - 5rpx);
  left: 0px;
  width: 100%;
  overflow-x: scroll;
  background-color: #F1F1FF;
  border-radius: 10rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
}
.toast_gz view{
  font-size: 24rpx;
  display: flex;
  align-items: center;
  height: 100%;
}
.toast_text{
  white-space: nowrap;
}
.toast_gz::-webkit-scrollbar {
  display: none;
  width: 0;
  height: 0;
  color: transparent;
}