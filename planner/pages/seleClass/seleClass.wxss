.banner {
  margin: 0 auto;
  width: 690rpx;
  height: 320rpx;
}
.banner > image {
  width: 100%;
  height: 100%;
}

page {
  background-color: #FAFCFF;
  padding: 0 30rpx;
  box-sizing: border-box;
}
.box {
  margin-top: 30rpx;
  box-shadow: 0 0 24rpx 2rpx rgba(0, 0, 0, 0.1);
  border-radius: 16rpx;
  padding: 24rpx 20rpx 0;
  box-sizing: border-box;
  overflow: hidden;
}
.box .head {
  display: flex;
  align-items: center;
  font-size: 30rpx;
  font-weight: bold;
  border-bottom: 1px solid #E5E5E5;
  padding-bottom: 22rpx;
}
.box .head image {
  margin-right: 16rpx;
  width: 36rpx;
  height: 36rpx;
}
.box .course {
  margin-top: 32rpx;
  padding-bottom: 16rpx;
}
.box .course .introduce {
  font-size: 28rpx;
}
.box .course .line {
  margin-top: 32rpx;
  display: flex;
  font-size: 28rpx;
  padding-bottom: 16rpx;
  border-bottom: 1px solid #E5E5E5;
}
.box .course .line:last-child {
  border-bottom: none;
}
.box .course .line .td {
  width: 182rpx;
  color: #999;
}
.box .model {
  margin: 0 -20rpx;
  background-color: #F5F5F5;
  overflow: hidden;
}
.box .model .time_box {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin: 24rpx 32rpx 0 24rpx;
  font-size: 28rpx;
}
.box .model .time_box .bold {
  font-size: 36rpx;
  font-weight: bold;
}
.box .model .cell {
  margin-top: 30rpx;
  display: flex;
  overflow-x: scroll;
  
}
.box .model .cell > view {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #fff;
  border-radius: 16rpx;
  font-size: 24rpx;
  margin-right: 16rpx;
}
::-webkit-scrollbar {
  width: 0;
  height: 0;
  display: none;
}
.box .model .cell > view image {
  margin: 24rpx 18rpx 0;
  width: 128rpx;
  height: 128rpx;
  border-radius: 100%;
}
.box .model .cell > view .text_desc {
  margin: 14rpx 0 30rpx;
  width: 120rpx;
}
.box .model .cell > view .text_name {
  margin: 20rpx 0 0;
  width: 120rpx;
}
.box .model .cells {
  margin: 24rpx 16rpx 0;
  display: flex;
  justify-content: space-between;
}
.box .model .cells > view {
  width: 124rpx;
  height: 200rpx;
  background-color: #fff;
  border-radius: 16rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  font-size: 24rpx;
  line-height: 34rpx;
}
.box .model .cells > view image {
  margin-top: 20rpx;
  margin-bottom: 16rpx;
  width: 80rpx;
  height: 80rpx;
}
.box .model .welfare_box {
  margin: 30rpx 24rpx;
  display: flex;
}
.box .model .welfare_box .img {
  position: relative;
  width: 146rpx;
  height: 144rpx;
}
.box .model .welfare_box .img image {
  width: 100%;
  height: 100%;
}
.box .model .welfare_box .img > view {
  position: absolute;
  bottom: 0;
  right: 0;
  top: 16rpx;
  left: 16rpx;
  font-size: 48rpx;
  line-height: 56rpx;
  color: #fff;
}
.box .model .welfare_box .welfare {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-left: 22rpx;
  flex: 1;
}
.box .model .welfare_box .welfare .line {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #666666;
}
.box .model .welfare_box .welfare .line > view {
  margin-right: 16rpx;
  width: 16rpx;
  height: 16rpx;
  background-color: #0089FF;
  border-radius: 50%;
}
.box .btn {
  margin: 24rpx auto;
  width: 192rpx;
  height: 64rpx;
  background-color: #5350D5;
  border-radius: 32rpx;
  font-size: 28rpx;
  color: #fff;
}

.right_mark_status{
  position: relative;
  z-index: 10;
  height: 50rpx;
  display: flex;
  justify-content: flex-end;
  top: -16rpx;
}
.right_mark_status image{
  margin-right: 32rpx;
  width: 120rpx;
}